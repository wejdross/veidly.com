{
  "name": "veidly-frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "NODE_OPTIONS=--max-old-space-size=8192 vitest run --no-isolate",
    "test:split": "NODE_OPTIONS=--max-old-space-size=4096 vitest run --pool=forks --maxWorkers=1 --exclude src/components/MapView.test.tsx && NODE_OPTIONS=--max-old-space-size=8192 vitest run --pool=forks --maxWorkers=1 --environment happy-dom src/components/MapView.test.tsx",
    "test:mapview": "NODE_OPTIONS='--max-old-space-size=8192 --expose-gc' vitest run --pool=threads --maxWorkers=1 --no-isolate src/components/MapView.test.tsx",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@types/dompurify": "^3.0.5",
    "axios": "^1.6.2",
    "dompurify": "^3.3.0",
    "leaflet": "^1.9.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-leaflet": "^4.2.1",
    "react-router-dom": "^6.20.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/leaflet": "^1.9.8",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^20.0.1",
    "jsdom": "^27.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^3.2.4"
  }
}
